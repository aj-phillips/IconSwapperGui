<Window x:Class="IconSwapperGui.Windows.ManageDirectoriesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Style="{StaticResource MaterialDesignWindow}"
        Title="Manage Directories"
        Height="480"
        Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <materialDesign:Card Grid.Row="0" Grid.Column="0" Margin="8" VerticalAlignment="Stretch">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Icon Folders" FontSize="16" FontWeight="SemiBold" Margin="8" Grid.Row="0" HorizontalAlignment="Center" />

                    <ListBox ItemsSource="{Binding IconsFolders}" SelectedItem="{Binding SelectedIconFolder}" Margin="8" Grid.Row="1" />

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="8" Grid.Row="2">
                        <Button Command="{Binding AddIconFolderCommand}" Style="{StaticResource MaterialDesignOutlinedButton}" Margin="0,0,8,0">Add</Button>
                        <Button Command="{Binding RemoveIconFolderCommand}" Style="{StaticResource MaterialDesignOutlinedButton}">Remove</Button>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

        <materialDesign:Card Grid.Row="0" Grid.Column="1" Margin="8" VerticalAlignment="Stretch">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                    <TextBlock Text="Application Shortcut Folders" FontSize="16" FontWeight="SemiBold" Margin="8" Grid.Row="0" HorizontalAlignment="Center" />

                <ListBox ItemsSource="{Binding ApplicationsFolders}" SelectedItem="{Binding SelectedApplicationFolder}" Margin="8" Grid.Row="1" />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="8" Grid.Row="2">
                    <Button Command="{Binding AddApplicationFolderCommand}" Style="{StaticResource MaterialDesignOutlinedButton}" Margin="0,0,8,0">Add</Button>
                    <Button Command="{Binding RemoveApplicationFolderCommand}" Style="{StaticResource MaterialDesignOutlinedButton}">Remove</Button>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

            <!-- Folders card spanning both columns -->
            <materialDesign:Card Grid.Row="1" Grid.ColumnSpan="2" Margin="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Folders" FontSize="16" FontWeight="SemiBold" Margin="8" Grid.Row="0" HorizontalAlignment="Center" />

                    <ListBox ItemsSource="{Binding FoldersLocations}" SelectedItem="{Binding SelectedFolderLocation}" Margin="8" Grid.Row="1" />

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="8" Grid.Row="2">
                        <Button Command="{Binding AddFolderLocationCommand}" Style="{StaticResource MaterialDesignOutlinedButton}" Margin="0,0,8,0">Add</Button>
                        <Button Command="{Binding RemoveFolderLocationCommand}" Style="{StaticResource MaterialDesignOutlinedButton}">Remove</Button>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

        </Grid>

        <!-- Buttons placed outside of the cards, in their own row -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="8">
            <Button Command="{Binding SaveCommand}" Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,0,8,0">Save</Button>
            <Button Command="{Binding CloseCommand}" Style="{StaticResource MaterialDesignOutlinedButton}">Close</Button>
        </StackPanel>
    </Grid>
</Window>
