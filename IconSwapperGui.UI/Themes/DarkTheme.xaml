<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Background Colors -->
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#0F172A" />
    <SolidColorBrush x:Key="SurfaceBackgroundBrush" Color="#1E293B" />
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="#1E293B" />

    <!-- Text Colors -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#F1F5F9" />
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#94A3B8" />
    <SolidColorBrush x:Key="TertiaryTextBrush" Color="#64748B" />

    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="#334155" />
    <SolidColorBrush x:Key="DividerBrush" Color="#1E293B" />

    <!-- Accent Colors -->
    <SolidColorBrush x:Key="AccentBrush" Color="#3B82F6" />
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#60A5FA" />
    <SolidColorBrush x:Key="AccentLightBrush" Color="#1E3A8A" />

    <!-- Interactive States -->
    <SolidColorBrush x:Key="HoverBrush" Color="#334155" />
    <SolidColorBrush x:Key="ActiveBrush" Color="#475569" />

    <!-- Semantic Colors -->
    <SolidColorBrush x:Key="SuccessBrush" Color="#10B981" />
    <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B" />
    <SolidColorBrush x:Key="ErrorBrush" Color="#EF4444" />
    <SolidColorBrush x:Key="InfoBrush" Color="#3B82F6" />

    <!-- Input Colors -->
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#0F172A" />
    <SolidColorBrush x:Key="InputBorderBrush" Color="#475569" />
    <SolidColorBrush x:Key="InputFocusBorderBrush" Color="#3B82F6" />

</ResourceDictionary>