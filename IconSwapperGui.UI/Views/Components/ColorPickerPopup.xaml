<UserControl x:Class="IconSwapperGui.UI.Views.Components.ColorPickerPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:IconSwapperGui.UI.Converters"
             mc:Ignorable="d"
             d:DesignHeight="220"
             d:DesignWidth="220">

    <UserControl.Resources>
        <ResourceDictionary>
            <converters:ColorToBrushConverter x:Key="ColorToBrushConverter" />
            <converters:BooleanNegationConverter x:Key="InverseBooleanConverter" />
            <converters:BoolToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <converters:BoolToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Themes/SharedStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Style="{StaticResource ColorPickerPopupChromeStyle}">
        <Grid Width="300" MinHeight="260">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Tab selector (pill style, reused from SwapperView) -->
            <Border Grid.Row="0"
                    Background="{DynamicResource AppBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Padding="6"
                    Margin="0,0,0,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <RadioButton Grid.Column="0"
                                 Style="{StaticResource TabPillRadioButtonStyle}"
                                 Margin="0,0,6,0"
                                 Content="Presets"
                                 IsChecked="{Binding IsCustomTabSelected, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, Converter={StaticResource InverseBooleanConverter}}" />

                    <RadioButton Grid.Column="1"
                                 Style="{StaticResource TabPillRadioButtonStyle}"
                                 Margin="6,0,0,0"
                                 Content="Custom"
                                 IsChecked="{Binding IsCustomTabSelected, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}" />
                </Grid>
            </Border>

            <!-- Presets -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Visibility="{Binding IsCustomTabSelected, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource InverseBooleanToVisibilityConverter}, ConverterParameter=Invert}">
                <StackPanel>
                    <TextBlock Text="Recent" Style="{StaticResource MutedTextStyle}" Margin="0,0,0,6" />
                    <ItemsControl ItemsSource="{Binding RecentColors, RelativeSource={RelativeSource AncestorType=UserControl}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource ColorPickerChipButtonStyle}"
                                        Margin="4"
                                        Background="{Binding Converter={StaticResource ColorToBrushConverter}}"
                                        Tag="{Binding}"
                                        Click="OnRecentClick" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Border Margin="0,6,0,8" Style="{StaticResource EditorDividerStyle}" />

                    <TextBlock Text="Palette" Style="{StaticResource MutedTextStyle}" Margin="0,0,0,6" />
                    <UniformGrid Columns="8" Rows="3">
                        <!-- Row 1 -->
                        <Button Style="{StaticResource ColorPickerChipButtonStyle}" Click="OnChipClick" Tag="#FF000000" Margin="4" Background="#FF000000" />
                        <Button Style="{StaticResource ColorPickerChipButtonStyle}" Click="OnChipClick" Tag="#FFFFFFFF" Margin="4" Background="#FFFFFFFF" />
                        <Button Style="{StaticResource ColorPickerChipButtonStyle}" Click="OnChipClick" Tag="#FFFF0000" Margin="4" Background="#FFFF0000" />
                        <Button Style="{StaticResource ColorPickerChipButtonStyle}" Click="OnChipClick" Tag="#FFFF7A00" Margin="4" Background="#FFFF7A00" />
                        <Button Style="{StaticResource ColorPickerChipButtonStyle}" Click="OnChipClick" Tag="#FFFFC700" Margin="4" Background="#FFFFC700" />
                        <Button Style="{StaticResource ColorPickerChipButtonStyle}" Click="OnChipClick" Tag="#FF00C853" Margin="4" Background="#FF00C853" />
                        <Button Style="{StaticResource ColorPickerChipButtonStyle}" Click="OnChipClick" Tag="#FF00B0FF" Margin="4" Background="#FF00B0FF" />
                        <Button Style="{StaticResource ColorPickerChipButtonStyle}" Click="OnChipClick" Tag="#FF7C4DFF" Margin="4" Background="#FF7C4DFF" />

                        <!-- Row 2 -->
                        <Button Style="{StaticResource ColorPickerChipButtonStyle}" Click="OnChipClick" Tag="#FF374151" Margin="4" Background="#FF374151" />
                        <Button Style="{StaticResource ColorPickerChipButtonStyle}" Click="OnChipClick" Tag="#FFE5E7EB" Margin="4" Background="#FFE5E7EB" />
                        <Button Style="{StaticResource ColorPickerChipButtonStyle}" Click="OnChipClick" Tag="#FFEF4444" Margin="4" Background="#FFEF4444" />
                        <Button Style="{StaticResource ColorPickerChipButtonStyle}" Click="OnChipClick" Tag="#FFF97316" Margin="4" Background="#FFF97316" />
                        <Button Style="{StaticResource ColorPickerChipButtonStyle}" Click="OnChipClick" Tag="#FFEAB308" Margin="4" Background="#FFEAB308" />
                        <Button Style="{StaticResource ColorPickerChipButtonStyle}" Click="OnChipClick" Tag="#FF22C55E" Margin="4" Background="#FF22C55E" />
                        <Button Style="{StaticResource ColorPickerChipButtonStyle}" Click="OnChipClick" Tag="#FF3B82F6" Margin="4" Background="#FF3B82F6" />
                        <Button Style="{StaticResource ColorPickerChipButtonStyle}" Click="OnChipClick" Tag="#FFA855F7" Margin="4" Background="#FFA855F7" />

                        <!-- Row 3 -->
                        <Button Style="{StaticResource ColorPickerChipButtonStyle}" Click="OnChipClick" Tag="#FF111827" Margin="4" Background="#FF111827" />
                        <Button Style="{StaticResource ColorPickerChipButtonStyle}" Click="OnChipClick" Tag="#FFF9FAFB" Margin="4" Background="#FFF9FAFB" />
                        <Button Style="{StaticResource ColorPickerChipButtonStyle}" Click="OnChipClick" Tag="#FFDC2626" Margin="4" Background="#FFDC2626" />
                        <Button Style="{StaticResource ColorPickerChipButtonStyle}" Click="OnChipClick" Tag="#FFEA580C" Margin="4" Background="#FFEA580C" />
                        <Button Style="{StaticResource ColorPickerChipButtonStyle}" Click="OnChipClick" Tag="#FFCA8A04" Margin="4" Background="#FFCA8A04" />
                        <Button Style="{StaticResource ColorPickerChipButtonStyle}" Click="OnChipClick" Tag="#FF16A34A" Margin="4" Background="#FF16A34A" />
                        <Button Style="{StaticResource ColorPickerChipButtonStyle}" Click="OnChipClick" Tag="#FF2563EB" Margin="4" Background="#FF2563EB" />
                        <Button Style="{StaticResource ColorPickerChipButtonStyle}" Click="OnChipClick" Tag="#FF9333EA" Margin="4" Background="#FF9333EA" />
                    </UniformGrid>
                </StackPanel>
            </ScrollViewer>

            <!-- Custom -->
            <Grid Grid.Row="1"
                  Visibility="{Binding IsCustomTabSelected, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="12" />
                    <ColumnDefinition Width="22" />
                </Grid.ColumnDefinitions>

                    <!-- SV square -->
                    <Border Grid.Column="0"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="12"
                            Background="{DynamicResource AppBackgroundBrush}">
                        <!-- Single inner surface so gradients fill edge-to-edge inside the padding -->
                        <Border Margin="8" CornerRadius="10" ClipToBounds="True">
                            <Grid x:Name="SvSurface"
                                  Background="Transparent"
                                  MouseLeftButtonDown="SvSurface_MouseLeftButtonDown"
                                  MouseMove="SvSurface_MouseMove"
                                  MouseLeftButtonUp="SvSurface_MouseLeftButtonUp">
                                <!-- Saturation (left=white, right=hue) -->
                                <Rectangle>
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#FFFFFFFF" Offset="0" />
                                            <GradientStop Color="{Binding HueColor, RelativeSource={RelativeSource AncestorType=UserControl}}" Offset="1" />
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>

                                <!-- Value overlay (top=transparent, bottom=black) -->
                                <Rectangle>
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#00FFFFFF" Offset="0" />
                                            <GradientStop Color="#FF000000" Offset="1" />
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>

                                <!-- Thumb -->
                                <Canvas IsHitTestVisible="False">
                                    <Border x:Name="SvThumb" Style="{StaticResource ColorPickerThumbStyle}" />
                                </Canvas>
                            </Grid>
                        </Border>
                    </Border>

                <!-- Hue strip -->
                <Border Grid.Column="2"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="12"
                        Background="{StaticResource HueStripBrush}"
                        x:Name="HueSurface"
                        Margin="0"
                        MouseLeftButtonDown="HueStrip_MouseLeftButtonDown"
                        MouseMove="HueStrip_MouseMove"
                        MouseLeftButtonUp="HueStrip_MouseLeftButtonUp">
                    <Canvas IsHitTestVisible="False">
                        <Border x:Name="HueThumb" Style="{StaticResource ColorPickerThumbStyle}" />
                    </Canvas>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
