<UserControl x:Class="IconSwapperGui.UI.Views.PixelArtEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:IconSwapperGui.UI.Converters"
             xmlns:components="clr-namespace:IconSwapperGui.UI.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1200">

    <UserControl.Resources>
        <ResourceDictionary>
            <converters:PixelToolToBoolConverter x:Key="PixelToolToBoolConverter" />
            <converters:ColorToBrushConverter x:Key="ColorToBrushConverter" />
            <converters:BoolToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <converters:BoolToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
            <converters:AddDoubleConverter x:Key="AddDoubleConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/SharedStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="{StaticResource EditorShellPadding}"
          PreviewMouseDown="RootGrid_PreviewMouseDown">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="320" />
        </Grid.ColumnDefinitions>

        <!-- Left: Tools -->
        <Border Grid.Column="0" Style="{StaticResource EditorPanelStyle}" Margin="0,0,12,0">
            <DockPanel LastChildFill="True">
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                    <TextBlock Text="Tools" Style="{StaticResource SectionTitleStyle}" />

                    <WrapPanel Margin="0,6,0,0">
                        <Border Style="{StaticResource ToolBadgeStyle}" Margin="0,0,6,6">
                            <TextBlock Text="P" Style="{StaticResource ToolBadgeTextStyle}" />
                        </Border>
                        <Border Style="{StaticResource ToolBadgeStyle}" Margin="0,0,6,6">
                            <TextBlock Text="B" Style="{StaticResource ToolBadgeTextStyle}" />
                        </Border>
                        <Border Style="{StaticResource ToolBadgeStyle}" Margin="0,0,6,6">
                            <TextBlock Text="E" Style="{StaticResource ToolBadgeTextStyle}" />
                        </Border>
                        <Border Style="{StaticResource ToolBadgeStyle}" Margin="0,0,6,6">
                            <TextBlock Text="F" Style="{StaticResource ToolBadgeTextStyle}" />
                        </Border>
                    </WrapPanel>
                </StackPanel>

                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel>
                        <ToggleButton Content="Pencil"
                                      Style="{StaticResource ToolToggleButtonStyle}"
                                      Margin="0,0,0,8"
                                      IsChecked="{Binding SelectedTool, Mode=TwoWay, Converter={StaticResource PixelToolToBoolConverter}, ConverterParameter=Pencil}" />
                        <ToggleButton Content="Brush"
                                      Style="{StaticResource ToolToggleButtonStyle}"
                                      Margin="0,0,0,8"
                                      IsChecked="{Binding SelectedTool, Mode=TwoWay, Converter={StaticResource PixelToolToBoolConverter}, ConverterParameter=Brush}" />
                        <ToggleButton Content="Eraser"
                                      Style="{StaticResource ToolToggleButtonStyle}"
                                      Margin="0,0,0,8"
                                      IsChecked="{Binding SelectedTool, Mode=TwoWay, Converter={StaticResource PixelToolToBoolConverter}, ConverterParameter=Eraser}" />
                        <ToggleButton Content="Fill"
                                      Style="{StaticResource ToolToggleButtonStyle}"
                                      Margin="0,0,0,8"
                                      IsChecked="{Binding SelectedTool, Mode=TwoWay, Converter={StaticResource PixelToolToBoolConverter}, ConverterParameter=Fill}" />

                        <Border Style="{StaticResource EditorDividerStyle}" />

                        <TextBlock Text="Options" Style="{StaticResource SectionTitleStyle}" Margin="0,0,0,6" />

                        <ContentControl>
                            <ContentControl.Style>
                                <Style TargetType="ContentControl">
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <TextBlock Text="Select a tool to configure options." Style="{StaticResource MutedTextStyle}" TextWrapping="Wrap" />
                                        </Setter.Value>
                                    </Setter>

                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedTool}" Value="Pencil">
                                            <Setter Property="Content">
                                                <Setter.Value>
                                                    <StackPanel>
                                                        <TextBlock Text="Size" Style="{StaticResource MutedTextStyle}" />
                                                        <Slider Minimum="1" Maximum="9" TickFrequency="1" IsSnapToTickEnabled="True"
                                                                Style="{StaticResource ModernSliderStyle}"
                                                                Value="{Binding PencilSize, Mode=TwoWay}" />
                                                    </StackPanel>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>

                                        <DataTrigger Binding="{Binding SelectedTool}" Value="Brush">
                                            <Setter Property="Content">
                                                <Setter.Value>
                                                    <StackPanel>
                                                        <TextBlock Text="Size" Style="{StaticResource MutedTextStyle}" />
                                                        <Slider Minimum="1" Maximum="15" TickFrequency="1" IsSnapToTickEnabled="True"
                                                                Style="{StaticResource ModernSliderStyle}"
                                                                Value="{Binding BrushSize, Mode=TwoWay}" />
                                                        <TextBlock Text="Hardness" Style="{StaticResource MutedTextStyle}" Margin="0,8,0,0" />
                                                        <Slider Minimum="0.05" Maximum="1" TickFrequency="0.05"
                                                                Style="{StaticResource ModernSliderStyle}"
                                                                Value="{Binding BrushHardness, Mode=TwoWay}" />
                                                    </StackPanel>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>

                                        <DataTrigger Binding="{Binding SelectedTool}" Value="Eraser">
                                            <Setter Property="Content">
                                                <Setter.Value>
                                                    <StackPanel>
                                                        <TextBlock Text="Size" Style="{StaticResource MutedTextStyle}" />
                                                        <Slider Minimum="1" Maximum="9" TickFrequency="1" IsSnapToTickEnabled="True"
                                                                Style="{StaticResource ModernSliderStyle}"
                                                                Value="{Binding EraserSize, Mode=TwoWay}" />
                                                    </StackPanel>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>

                                        <DataTrigger Binding="{Binding SelectedTool}" Value="Fill">
                                            <Setter Property="Content">
                                                <Setter.Value>
                                                    <StackPanel>
                                                        <CheckBox Content="Allow diagonal"
                                                                  Style="{StaticResource ModernCheckBoxStyle}"
                                                                  IsChecked="{Binding FillAllowDiagonal, Mode=TwoWay}" />
                                                    </StackPanel>
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ContentControl.Style>
                        </ContentControl>
                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <!-- Center: Workspace -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Style="{StaticResource EditorToolbarStyle}" Margin="0,0,0,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Pixel Art Editor"
                               Style="{StaticResource PageTitleStyle}"
                               FontSize="18"
                               VerticalAlignment="Center" />

                    <Grid Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" MaxWidth="420">
                        <TextBlock x:Name="DocumentNameText"
                                   Text="{Binding DocumentName}"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   TextTrimming="CharacterEllipsis"
                                   VerticalAlignment="Center"
                                   Visibility="{Binding IsRenamingDocumentName, Converter={StaticResource InverseBooleanToVisibilityConverter}, ConverterParameter=Invert}">
                            <TextBlock.InputBindings>
                                <MouseBinding Gesture="LeftClick"
                                             Command="{Binding BeginRenameDocumentNameCommand}" />
                            </TextBlock.InputBindings>
                        </TextBlock>

                        <TextBox x:Name="DocumentNameEditor"
                                 Text="{Binding DocumentName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource InputTextBoxStyle}"
                                 Padding="10,6"
                                 FontSize="13"
                                 Height="45"
                                 MinWidth="180"
                                 Visibility="{Binding IsRenamingDocumentName, Converter={StaticResource BooleanToVisibilityConverter}}"
                                 Loaded="DocumentNameTextBox_Loaded"
                                 IsVisibleChanged="RenameTextBox_IsVisibleChanged"
                                 GotKeyboardFocus="RenameTextBox_GotKeyboardFocus"
                                 LostKeyboardFocus="DocumentNameTextBox_LostKeyboardFocus"
                                 KeyDown="DocumentNameTextBox_KeyDown" />
                    </Grid>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="New"
                                Style="{StaticResource EditorToolbarButtonStyle}"
                                Margin="0,0,8,0"
                                Command="{Binding NewCommand}" />
                        <Button Content="Export"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Padding="14,8"
                                Command="{Binding ExportCommand}" />
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Row="1" Style="{StaticResource CanvasFrameStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <DockPanel Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock DockPanel.Dock="Left" Text="Canvas" Margin="0" VerticalAlignment="Center" Style="{StaticResource SectionTitleStyle}" />
                        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,3,0,0">
                            <TextBlock Text="Zoom" Style="{StaticResource MutedTextStyle}" VerticalAlignment="Center" Margin="0,0,6,0" />
                            <Slider Width="140"
                                    Minimum="1" Maximum="8"
                                    Value="{Binding ZoomLevel, Mode=TwoWay}"
                                    TickFrequency="1"
                                    Style="{StaticResource ModernSliderStyle}"
                                    IsSnapToTickEnabled="True" />
                        </StackPanel>
                    </DockPanel>

                    <Border Grid.Row="1" Style="{StaticResource CanvasSurfaceStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <ScrollViewer x:Name="CanvasScrollViewer"
                                          Grid.Row="0"
                                          HorizontalScrollBarVisibility="Auto"
                                          VerticalScrollBarVisibility="Auto"
                                          Margin="12">
                                <Grid>
                                    <Grid.LayoutTransform>
                                        <ScaleTransform ScaleX="{Binding ZoomLevel}" ScaleY="{Binding ZoomLevel}" />
                                    </Grid.LayoutTransform>

                                    <Canvas x:Name="DrawableCanvas"
                                            Width="512"
                                            Height="512"
                                            Background="Transparent"
                                            SnapsToDevicePixels="True" />
                                </Grid>
                            </ScrollViewer>

                            <Border Grid.Row="1" Background="{DynamicResource HoverBrush}" Padding="10" CornerRadius="0,0,12,12">
                                <DockPanel>
                                    <TextBlock Style="{StaticResource MutedTextStyle}">
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0}×{1}">
                                                <Binding Path="Rows" />
                                                <Binding Path="Columns" />
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                    <TextBlock HorizontalAlignment="Right" Text="Left-click and drag to paint" Style="{StaticResource MutedTextStyle}" />
                                </DockPanel>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Right: Inspector -->
        <Grid Grid.Column="2" Margin="12,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Style="{StaticResource EditorPanelStyle}" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="Color" Style="{StaticResource SectionTitleStyle}" />

                    <Grid Margin="0,2,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <Button x:Name="SelectedColorButton"
                                    Style="{StaticResource ColorSwatchButtonStyle}"
                                    Height="54"
                                    Command="{Binding OpenSelectedColorPickerCommand}">
                                <Border CornerRadius="10"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        Background="{Binding SelectedColor, Converter={StaticResource ColorToBrushConverter}}" />
                            </Button>

                            <Popup x:Name="SelectedColorPopup"
                                   Placement="Bottom"
                                   PlacementTarget="{Binding ElementName=SelectedColorButton}"
                                   StaysOpen="False"
                                   IsOpen="{Binding IsSelectedColorPickerOpen, Mode=TwoWay}"
                                   AllowsTransparency="True">
                                <components:ColorPickerPopup SelectedColor="{Binding SelectedColor, Mode=TwoWay}"
                                                             RecentColors="{Binding RecentColors}"
                                                             AutoCloseOnPick="False"
                                                             ColorCommitted="SelectedColorPicker_ColorCommitted"
                                                             ColorPicked="SelectedColorPicker_ColorPicked" />
                            </Popup>
                        </Grid>

                        <Grid Grid.Column="1" Margin="10,0,0,0">
                            <Button x:Name="BackgroundColorButton"
                                    Style="{StaticResource ColorSwatchButtonStyle}"
                                    Width="54"
                                    Height="54"
                                    Command="{Binding OpenBackgroundColorPickerCommand}">
                                <Border CornerRadius="10"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1"
                                        Background="{Binding BackgroundColor, Converter={StaticResource ColorToBrushConverter}}" />
                            </Button>

                            <Popup x:Name="BackgroundColorPopup"
                                   Placement="Bottom"
                                   PlacementTarget="{Binding ElementName=BackgroundColorButton}"
                                   StaysOpen="False"
                                   IsOpen="{Binding IsBackgroundColorPickerOpen, Mode=TwoWay}"
                                   AllowsTransparency="True">
                                <components:ColorPickerPopup SelectedColor="{Binding BackgroundColor, Mode=TwoWay}"
                                                             RecentColors="{Binding RecentColors}"
                                                             AutoCloseOnPick="False"
                                                             ColorCommitted="BackgroundColorPicker_ColorCommitted"
                                                             ColorPicked="BackgroundColorPicker_ColorPicked" />
                            </Popup>
                        </Grid>
                    </Grid>

                    <TextBlock Text="Left uses selected color. Right is background." Style="{StaticResource MutedTextStyle}" Margin="0,10,0,0" TextWrapping="Wrap" />
                </StackPanel>
            </Border>

            <Border Grid.Row="1" Style="{StaticResource EditorPanelStyle}" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="Canvas Settings" Style="{StaticResource SectionTitleStyle}" />

                    <Grid Margin="0,4,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Rows" Style="{StaticResource MutedTextStyle}" Margin="0,0,0,4" />
                            <TextBox Text="{Binding Rows, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource InputTextBoxStyle}" />
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Columns" Style="{StaticResource MutedTextStyle}" Margin="0,0,0,4" />
                            <TextBox Text="{Binding Columns, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource InputTextBoxStyle}" />
                        </StackPanel>
                    </Grid>

                    <Button Content="Apply Layout"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0,12,0,0"
                            Command="{Binding ApplyLayoutCommand}" />

                    <Border Style="{StaticResource EditorDividerStyle}" />

                    <TextBlock Text="Export Folder" Style="{StaticResource MutedTextStyle}" />
                    <TextBlock Text="{Binding ExportFolderDisplay}"
                               Style="{StaticResource MutedTextStyle}"
                               TextWrapping="Wrap"
                               Margin="0,4,0,0" />
                </StackPanel>
            </Border>

            <Border Grid.Row="2" Style="{StaticResource EditorPanelStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <DockPanel LastChildFill="False">
                        <TextBlock Text="Layers" Style="{StaticResource SectionTitleStyle}" DockPanel.Dock="Left" VerticalAlignment="Center" Margin="0" />
                        <Button
                                VerticalContentAlignment="Center"
                                DockPanel.Dock="Right"
                                Width="30"
                                Height="30"
                                Style="{StaticResource LayerIconButtonStyle}"
                                Foreground="{DynamicResource SecondaryTextBrush}"
                                Padding="0"
                                Command="{Binding AddLayerCommand}">
                            <Path Style="{StaticResource LayerIconPathStyle}" Data="{StaticResource IconPlusGeometry}" />
                        </Button>
                    </DockPanel>

                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding Layers}"
                             SelectedItem="{Binding SelectedLayer, Mode=TwoWay}"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="0,10,0,0"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ItemContainerStyle="{StaticResource ListItemContainerStyle}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">
                                        <!-- Measures the rendered width of the name text for sizing the rename TextBox -->
                                        <TextBlock x:Name="LayerNameMeasure"
                                                   Text="{Binding Name}"
                                                   Foreground="Transparent"
                                                   Visibility="Hidden"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Left" />

                                        <TextBlock x:Name="LayerNameText"
                                                   Text="{Binding Name}"
                                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Left"
                                                    Visibility="{Binding IsRenaming, Converter={StaticResource InverseBooleanToVisibilityConverter}, ConverterParameter=Invert}">
                                            <TextBlock.InputBindings>
                                                <MouseBinding Gesture="LeftClick"
                                                             Command="{Binding DataContext.BeginRenameLayerCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                                             CommandParameter="{Binding}" />
                                            </TextBlock.InputBindings>
                                        </TextBlock>

                                        <TextBox x:Name="LayerNameEditor"
                                                 Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 Background="Transparent"
                                                 BorderThickness="0"
                                                 Foreground="{DynamicResource PrimaryTextBrush}"
                                                 VerticalContentAlignment="Center"
                                                 HorizontalContentAlignment="Left"
                                                 HorizontalAlignment="Left"
                                                 MinWidth="60"
                                                 MaxWidth="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=ActualWidth, Converter={StaticResource AddDoubleConverter}, ConverterParameter=-16}"
                                                 Width="{Binding ElementName=LayerNameMeasure, Path=ActualWidth, Converter={StaticResource AddDoubleConverter}, ConverterParameter=20}"
                                                 Visibility="{Binding IsRenaming, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                 Loaded="LayerNameTextBox_Loaded"
                                                 IsVisibleChanged="RenameTextBox_IsVisibleChanged"
                                                 GotKeyboardFocus="RenameTextBox_GotKeyboardFocus"
                                                 LostKeyboardFocus="LayerNameTextBox_LostKeyboardFocus"
                                                 KeyDown="LayerNameTextBox_KeyDown" />
                                    </Grid>

                                    <ToggleButton Grid.Column="1"
                                                  Margin="8,0,0,0"
                                                  Width="34"
                                                  Height="34"
                                                  Style="{StaticResource LayerLockToggleButtonStyle}"
                                                  IsChecked="{Binding IsLocked, Mode=TwoWay}"
                                                  ToolTip="Lock/unlock layer"
                                                  Foreground="{DynamicResource SecondaryTextBrush}">
                                        <Path Style="{StaticResource LayerIconPathStyle}" Data="{StaticResource IconLockGeometry}" />
                                    </ToggleButton>

                                    <Button Grid.Column="2"
                                            Margin="8,0,0,0"
                                            Width="34"
                                            Height="34"
                                            Style="{StaticResource LayerIconButtonStyle}"
                                            Foreground="{DynamicResource SecondaryTextBrush}"
                                            ToolTip="Remove layer"
                                            Command="{Binding DataContext.RemoveLayerCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                            CommandParameter="{Binding}">
                                        <Path Style="{StaticResource LayerIconPathStyle}" Data="{StaticResource IconMinusGeometry}" />
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
