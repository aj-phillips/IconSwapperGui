<UserControl x:Class="IconSwapperGui.UI.Views.NotificationPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:IconSwapperGui.UI.Converters"
             xmlns:components="clr-namespace:IconSwapperGui.UI.Views.Components"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="400">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/SharedStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:NotificationTypeToColorConverter x:Key="TypeToColorConverter" />
            <converters:NotificationTypeToIconConverter x:Key="TypeToIconConverter" />
            <converters:TimeAgoConverter x:Key="TimeAgoConverter" />
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Border Background="{DynamicResource SurfaceBackgroundBrush}"
            CornerRadius="12"
            BorderThickness="1"
            BorderBrush="{DynamicResource BorderBrush}">
        <Border.Effect>
            <DropShadowEffect Color="#000000"
                              Opacity="0.1"
                              BlurRadius="20"
                              ShadowDepth="4"
                              Direction="270" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    BorderThickness="0,0,0,1"
                    BorderBrush="#E5E7EB"
                    Padding="16,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Notifications"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                   VerticalAlignment="Center" />
                        <Border Background="{DynamicResource ErrorBrush}"
                                CornerRadius="10"
                                Padding="10,2"
                                Margin="8,0,0,0"
                                Visibility="{Binding UnreadCount, Converter={StaticResource BoolToVisibilityConverter}}">
                            <TextBlock Text="{Binding UnreadCount}"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Border>
                    </StackPanel>

                    <components:IconButton Grid.Column="1"
                                            Command="{Binding MarkAllAsReadCommand}"
                                            ToolTip="Mark all as read"
                                            Visibility="{Binding HasNotifications, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Path Data="M5 13l4 4L19 7"
                              Stroke="{DynamicResource SecondaryTextBrush}"
                              StrokeThickness="2"
                              Width="16"
                              Height="16"
                              Stretch="Uniform" />
                    </components:IconButton>
                </Grid>
            </Border>

            <!-- Notifications List -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          MaxHeight="400">
                <ItemsControl ItemsSource="{Binding Notifications}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource NotificationItemStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Icon -->
                                    <Border Grid.Column="0"
                                            Width="40"
                                            Height="40"
                                            Background="{Binding Type, Converter={StaticResource TypeToColorConverter}}"
                                            CornerRadius="20"
                                            Margin="0,0,12,0"
                                            VerticalAlignment="Top">
                                        <Path Data="{Binding Type, Converter={StaticResource TypeToIconConverter}}"
                                              Stroke="White"
                                              StrokeThickness="2"
                                              Width="20"
                                              Height="20"
                                              Stretch="Uniform"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                                    </Border>

                                    <!-- Content -->
                                    <StackPanel Grid.Column="1"
                                                VerticalAlignment="Top">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding Title}"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                                       TextWrapping="Wrap" />

                                            <Ellipse Grid.Column="1"
                                                     Width="8"
                                                     Height="8"
                                                     Fill="{DynamicResource AccentBrush}"
                                                     Margin="8,4,0,0"
                                                     Visibility="{Binding IsRead, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}" />
                                        </Grid>

                                        <TextBlock Text="{Binding Message}"
                                                   FontSize="13"
                                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                                   TextWrapping="Wrap"
                                                   Margin="0,4,0,0" />

                                        <TextBlock
                                            Text="{Binding Timestamp, Converter={StaticResource TimeAgoConverter}}"
                                            FontSize="12"
                                            Foreground="{DynamicResource TertiaryTextBrush}"
                                            Margin="0,6,0,0" />
                                    </StackPanel>

                                    <!-- Remove Button -->
                                    <components:IconButton Grid.Column="2"
                                                          Command="{Binding DataContext.RemoveNotificationCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                          CommandParameter="{Binding Id}"
                                                          ToolTip="Remove"
                                                          VerticalAlignment="Top"
                                                          Margin="8,0,0,0">
                                        <Path Data="M6 18L18 6M6 6l12 12"
                                              Stroke="{DynamicResource TertiaryTextBrush}"
                                              StrokeThickness="2"
                                              Width="14"
                                              Height="14"
                                              Stretch="Uniform" />
                                    </components:IconButton>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Empty State -->
            <StackPanel Grid.Row="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Visibility="{Binding HasNotifications, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"
                        Margin="40">
                <Path
                    Data="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"
                    Stroke="{DynamicResource SecondaryTextBrush}"
                    StrokeThickness="2"
                    Width="48"
                    Height="48"
                    Stretch="Uniform"
                    HorizontalAlignment="Center" />
                <TextBlock Text="No notifications"
                           FontSize="16"
                           FontWeight="Medium"
                           Foreground="{DynamicResource TertiaryTextBrush}"
                           TextAlignment="Center"
                           Margin="0,16,0,4" />
                <TextBlock Text="You're all caught up!"
                           FontSize="13"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           TextAlignment="Center" />
            </StackPanel>

            <!-- Footer -->
            <Border Grid.Row="2"
                    BorderThickness="0,1,0,0"
                    BorderBrush="#E5E7EB"
                    Padding="12"
                    Visibility="{Binding HasNotifications, Converter={StaticResource BoolToVisibilityConverter}}">
                <Button Content="Clear All"
                        Command="{Binding ClearAllCommand}"
                        Background="Transparent"
                        Foreground="#EF4444"
                        BorderThickness="0"
                        FontSize="13"
                        FontWeight="Medium"
                        Cursor="Hand"
                        HorizontalAlignment="Center">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                Padding="12,6"
                                                CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FEE2E2" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Border>
        </Grid>
    </Border>
</UserControl>