<UserControl x:Class="IconSwapperGui.UI.Views.ConverterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IconSwapperGui.UI.Views"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:converters="clr-namespace:IconSwapperGui.UI.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/SharedStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibility" />
            <converters:IconPathToImageConverter x:Key="IconPathToImageConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{DynamicResource AppBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header / Controls -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="{StaticResource PagePadding}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Converter" Style="{StaticResource ConverterHeaderTitleStyle}" />
                    <TextBlock Text="Filter images, then convert them to multi-size .ico files." Style="{StaticResource ConverterHeaderSubtitleStyle}" />
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0,0,0">
                    <Button Style="{StaticResource SecondaryButtonStyle}"
                            Content="Refresh"
                            Padding="14,10"
                            Click="Refresh_Click" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Body -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="{StaticResource PagePadding}" Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Preview" Style="{StaticResource SectionTitleStyle}" />
                    <TextBlock Grid.Column="1"
                               Style="{StaticResource MutedTextStyle}"
                               VerticalAlignment="Center"
                               Text="(scroll to view more)" />
                </Grid>

                <Grid Grid.Row="1">
                    <ListBox ItemsSource="{Binding FilteredIcons}"
                             BorderThickness="0"
                             Background="Transparent"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             ItemContainerStyle="{StaticResource IconTileContainerStyle}"
                             Padding="4">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel IsItemsHost="True" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource ConverterIconTileStyle}" Width="140" Height="140">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <Border Background="{DynamicResource HoverBrush}" CornerRadius="12" Margin="8">
                                            <Image Source="{Binding Path, Converter={StaticResource IconPathToImageConverter}}"
                                                   Stretch="Uniform"
                                                   Width="64" Height="64"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center" />
                                        </Border>

                                        <TextBlock Grid.Row="1"
                                                   Margin="0,8,0,0"
                                                   Text="{Binding Name}"
                                                   ToolTip="{Binding Name}"
                                                   Style="{StaticResource ConverterIconNameStyle}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Empty state overlay -->
                    <Border Background="Transparent">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                                    Visibility="{Binding FilteredIcons.Count, Converter={StaticResource BoolToVisibility}, ConverterParameter=Invert}">
                            <TextBlock Text="No items yet" Style="{StaticResource EmptyStateTitleStyle}" />
                            <TextBlock Text="Add images to your configured converter folders, then use the search box to narrow down what you want to convert." Style="{StaticResource EmptyStateBodyStyle}" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- Footer / Actions -->
        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="{StaticResource PagePadding}" Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,18,0">
                    <CheckBox Style="{StaticResource ToggleSwitchStyle}"
                              IsChecked="{Binding CanDeleteImagesAfterConversion}"
                              VerticalAlignment="Center" />
                    <TextBlock Text="Delete source images after conversion" Margin="10,0,0,0" VerticalAlignment="Center"
                               Foreground="{DynamicResource PrimaryTextBrush}" />
                </StackPanel>

                <Button Grid.Column="1"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Content="Convert"
                        Padding="18,10"
                        Command="{Binding ConvertIconCommand}"
                        IsEnabled="{Binding CanConvertImages}" />

                <ProgressBar Grid.Row="1" Grid.ColumnSpan="2" Margin="0,14,0,0"
                             Style="{StaticResource ModernProgressBarStyle}"
                             Minimum="0" Maximum="100"
                             Value="{Binding ConversionProgress}"
                             Visibility="{Binding IsConverting, Converter={StaticResource BoolToVisibility}}" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
