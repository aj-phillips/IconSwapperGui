<UserControl x:Class="IconSwapperGui.UI.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:IconSwapperGui.UI.Converters"
             xmlns:components="clr-namespace:IconSwapperGui.UI.Views.Components"
             xmlns:templates="clr-namespace:IconSwapperGui.UI.Views.Components.Templates"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/SharedStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:SectionVisibilityConverter x:Key="SectionVisibilityConverter" />
            <converters:BooleanNegationConverter x:Key="BooleanNegationConverter" />
            <converters:StringNotEmptyToVisibilityConverter x:Key="StringNotEmptyToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" MinWidth="180" MaxWidth="280" />
            <ColumnDefinition Width="*" MinWidth="400" />
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar - Sections -->
        <Border x:Name="SidebarBorder"
                Grid.Column="0"
                Width="220"
                HorizontalAlignment="Left"
                Background="{DynamicResource SurfaceBackgroundBrush}"
                BorderThickness="0,0,1,0"
                BorderBrush="{DynamicResource BorderBrush}"
                Padding="16">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <RadioButton Content="Appearance"
                                 Style="{StaticResource SectionButtonStyle}"
                                 IsChecked="True"
                                 GroupName="SettingsSection"
                                 Command="{Binding SelectSectionCommand}"
                                 CommandParameter="Appearance"
                                 Margin="0,0,0,8" />

                    <RadioButton Content="Application"
                                 Style="{StaticResource SectionButtonStyle}"
                                 GroupName="SettingsSection"
                                 Command="{Binding SelectSectionCommand}"
                                 CommandParameter="Application"
                                 Margin="0,0,0,8" />

                    <RadioButton Content="General"
                                 Style="{StaticResource SectionButtonStyle}"
                                 GroupName="SettingsSection"
                                 Command="{Binding SelectSectionCommand}"
                                 CommandParameter="General"
                                 Margin="0,0,0,8" />

                    <RadioButton Content="Notifications"
                                 Style="{StaticResource SectionButtonStyle}"
                                 GroupName="SettingsSection"
                                 Command="{Binding SelectSectionCommand}"
                                 CommandParameter="Notifications"
                                 Margin="0,0,0,8" />

                    <RadioButton Content="Advanced"
                                 Style="{StaticResource SectionButtonStyle}"
                                 GroupName="SettingsSection"
                                 Command="{Binding SelectSectionCommand}"
                                 CommandParameter="Advanced"
                                 Margin="0,0,0,8" />

                    <RadioButton Content="About"
                                 Style="{StaticResource SectionButtonStyle}"
                                 GroupName="SettingsSection"
                                 Command="{Binding SelectSectionCommand}"
                                 CommandParameter="About" />
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Right Content Area -->
        <ScrollViewer Grid.Column="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="32,24">
            <StackPanel MaxWidth="700">

                <!-- Appearance Section -->
                <StackPanel x:Name="AppearanceSection"
                            Visibility="{Binding SelectedSection, Converter={StaticResource SectionVisibilityConverter}, ConverterParameter=Appearance}">
                    <TextBlock Text="Appearance"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               Margin="0,0,0,8"
                               TextWrapping="Wrap" />
                    <TextBlock Text="Customize how the application looks"
                               FontSize="13"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               Margin="0,0,0,24"
                               TextWrapping="Wrap" />

                    <!-- Theme Selection -->
                    <Border Style="{StaticResource SettingItemStyle}">
                        <StackPanel>
                            <TextBlock Text="Theme"
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       Margin="0,0,0,8" />
                            <TextBlock Text="Choose your preferred theme"
                                       FontSize="12"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="0,0,0,16"
                                       TextWrapping="Wrap" />

                            <StackPanel Orientation="Horizontal">
                                <RadioButton Content="Light"
                                             GroupName="Theme"
                                             IsChecked="{Binding IsLightTheme}"
                                             Margin="0,0,16,0"
                                             Foreground="{DynamicResource PrimaryTextBrush}" />
                                <RadioButton Content="Dark"
                                             GroupName="Theme"
                                             IsChecked="{Binding IsDarkTheme}"
                                             Foreground="{DynamicResource PrimaryTextBrush}" />
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Application Section -->
                <StackPanel x:Name="ApplicationSection"
                            Visibility="{Binding SelectedSection, Converter={StaticResource SectionVisibilityConverter}, ConverterParameter=Application}">
                    <TextBlock Text="Application"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               Margin="0,0,0,8"
                               TextWrapping="Wrap" />
                    <TextBlock Text="Customise core application settings"
                               FontSize="13"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               Margin="0,0,0,24"
                               TextWrapping="Wrap" />

                    <!-- Shortcut Locations -->
                    <Border Style="{StaticResource SettingItemStyle}">
                        <StackPanel>
                            <TextBlock Text="Shortcut Locations"
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       Margin="0,0,0,8" />
                            <TextBlock Text="Folders to search for shortcuts"
                                       FontSize="12"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="0,0,0,16"
                                       TextWrapping="Wrap" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <ListBox Grid.Column="0"
                                         Style="{StaticResource SettingsLocationListBoxStyle}"
                                         ItemsSource="{Binding ShortcutLocations}"
                                         SelectedItem="{Binding SelectedShortcutLocation, Mode=TwoWay}" />

                                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Top">
                                    <Button Content="Add"
                                            Style="{StaticResource SettingsCompactPrimaryButtonStyle}"
                                            Command="{Binding AddShortcutLocationCommand}"
                                            Margin="0,0,0,8" />
                                    <Button Content="Remove"
                                            Style="{StaticResource SettingsCompactButtonStyle}"
                                            Command="{Binding RemoveShortcutLocationCommand}"
                                            IsEnabled="{Binding RemoveShortcutLocationCommand.CanExecute, Mode=OneWay}" />
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Icon Locations -->
                    <Border Style="{StaticResource SettingItemStyle}">
                        <StackPanel>
                            <TextBlock Text="Icon Locations"
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       Margin="0,0,0,8" />
                            <TextBlock Text="Folders to search for icons"
                                       FontSize="12"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="0,0,0,16"
                                       TextWrapping="Wrap" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <ListBox Grid.Column="0"
                                         Style="{StaticResource SettingsLocationListBoxStyle}"
                                         ItemsSource="{Binding IconLocations}"
                                         SelectedItem="{Binding SelectedIconLocation, Mode=TwoWay}" />

                                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Top">
                                    <Button Content="Add"
                                            Style="{StaticResource SettingsCompactPrimaryButtonStyle}"
                                            Command="{Binding AddIconLocationCommand}"
                                            Margin="0,0,0,8" />
                                    <Button Content="Remove"
                                            Style="{StaticResource SettingsCompactButtonStyle}"
                                            Command="{Binding RemoveIconLocationCommand}"
                                            IsEnabled="{Binding RemoveIconLocationCommand.CanExecute, Mode=OneWay}" />
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Folder Shortcut Locations -->
                    <Border Style="{StaticResource SettingItemStyle}">
                        <StackPanel>
                            <TextBlock Text="Folder Shortcut Locations"
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       Margin="0,0,0,8" />
                            <TextBlock Text="Folders to search for folder shortcuts"
                                       FontSize="12"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="0,0,0,16"
                                       TextWrapping="Wrap" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <ListBox Grid.Column="0"
                                         Style="{StaticResource SettingsLocationListBoxStyle}"
                                         ItemsSource="{Binding FolderShortcutLocations}"
                                         SelectedItem="{Binding SelectedFolderShortcutLocation, Mode=TwoWay}" />

                                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Top">
                                    <Button Content="Add"
                                            Style="{StaticResource SettingsCompactPrimaryButtonStyle}"
                                            Command="{Binding AddFolderShortcutLocationCommand}"
                                            Margin="0,0,0,8" />
                                    <Button Content="Remove"
                                            Style="{StaticResource SettingsCompactButtonStyle}"
                                            Command="{Binding RemoveFolderShortcutLocationCommand}"
                                            IsEnabled="{Binding RemoveFolderShortcutLocationCommand.CanExecute, Mode=OneWay}" />
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Converter Icons Locations -->
                    <Border Style="{StaticResource SettingItemStyle}">
                        <StackPanel>
                            <TextBlock Text="Converter Icons Locations"
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       Margin="0,0,0,8" />
                            <TextBlock Text="Folders to search for converter icon sets"
                                       FontSize="12"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="0,0,0,16"
                                       TextWrapping="Wrap" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <ListBox Grid.Column="0"
                                         Style="{StaticResource SettingsLocationListBoxStyle}"
                                         ItemsSource="{Binding ConverterIconsLocations}"
                                         SelectedItem="{Binding SelectedConverterIconsLocation, Mode=TwoWay}" />

                                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Top">
                                    <Button Content="Add"
                                            Style="{StaticResource SettingsCompactPrimaryButtonStyle}"
                                            Command="{Binding AddConverterIconsLocationCommand}"
                                            Margin="0,0,0,8" />
                                    <Button Content="Remove"
                                            Style="{StaticResource SettingsCompactButtonStyle}"
                                            Command="{Binding RemoveConverterIconsLocationCommand}"
                                            IsEnabled="{Binding RemoveConverterIconsLocationCommand.CanExecute, Mode=OneWay}" />
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Export Location -->
                    <Border Style="{StaticResource SettingItemStyle}">
                        <StackPanel>
                            <TextBlock Text="Export Location"
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource PrimaryTextBrush}"
                                       Margin="0,0,0,8" />
                            <TextBlock Text="Where exported files should be saved"
                                       FontSize="12"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       Margin="0,0,0,16"
                                       TextWrapping="Wrap" />

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                                         Style="{StaticResource InputTextBoxStyle}"
                                         IsReadOnly="True"
                                         Text="{Binding ExportLocation}" />

                                <Button Grid.Column="1"
                                        Content="Browse"
                                        Style="{StaticResource SettingsCompactButtonStyle}"
                                        Margin="12,0,0,0"
                                        Command="{Binding BrowseExportLocationCommand}"
                                        VerticalAlignment="Center" />
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- General Section -->
                <StackPanel x:Name="GeneralSection"
                            Visibility="{Binding SelectedSection, Converter={StaticResource SectionVisibilityConverter}, ConverterParameter=General}">
                    <TextBlock Text="General"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               Margin="0,0,0,8"
                               TextWrapping="Wrap" />
                    <TextBlock Text="General application settings"
                               FontSize="13"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               Margin="0,0,0,24"
                               TextWrapping="Wrap" />

                    <templates:SettingToggleItem
                        TitleText="Check for Updates"
                        DescriptionText="Automatically check for application updates"
                        IsChecked="{Binding CheckForUpdates}" />

                    <templates:SettingToggleItem
                        TitleText="Launch at Startup"
                        DescriptionText="Automatically start the application when you log in to Windows"
                        IsChecked="{Binding LaunchAtStartup}" />
                </StackPanel>

                <!-- Notifications Section -->
                <StackPanel x:Name="NotificationsSection"
                            Visibility="{Binding SelectedSection, Converter={StaticResource SectionVisibilityConverter}, ConverterParameter=Notifications}">
                    <TextBlock Text="Notifications"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               Margin="0,0,0,8"
                               TextWrapping="Wrap" />
                    <TextBlock Text="Manage notification preferences"
                               FontSize="13"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               Margin="0,0,0,24"
                               TextWrapping="Wrap" />

                    <templates:SettingToggleItem
                        TitleText="Play Sound"
                        DescriptionText="Play sound when notification arrives"
                        IsChecked="{Binding PlaySound}" />
                </StackPanel>

                <!-- Advanced Section -->
                <StackPanel x:Name="AdvancedSection"
                            Visibility="{Binding SelectedSection, Converter={StaticResource SectionVisibilityConverter}, ConverterParameter=Advanced}">
                    <TextBlock Text="Advanced"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               Margin="0,0,0,8"
                               TextWrapping="Wrap" />
                    <TextBlock Text="Advanced settings for power users"
                               FontSize="13"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               Margin="0,0,0,24"
                               TextWrapping="Wrap" />

                    <templates:SettingToggleItem
                        TitleText="Enable Logging"
                        DescriptionText="Save application logs for debugging"
                        IsChecked="{Binding EnableLogging}" />
                </StackPanel>

                <!-- About Section -->
                <StackPanel x:Name="AboutSection"
                            Visibility="{Binding SelectedSection, Converter={StaticResource SectionVisibilityConverter}, ConverterParameter=About}">
                    <TextBlock Text="About"
                               FontSize="24"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryTextBrush}"
                               Margin="0,0,0,8"
                               TextWrapping="Wrap" />
                    <TextBlock Text="Information about this application"
                               FontSize="13"
                               Foreground="{DynamicResource SecondaryTextBrush}"
                               Margin="0,0,0,24"
                               TextWrapping="Wrap" />

                    <!-- Check for Updates Card -->
                    <Border Style="{StaticResource SettingItemStyle}">
                        <StackPanel>
                            <Grid Margin="0,0,0,12">
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Software Updates"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource PrimaryTextBrush}"
                                               TextWrapping="Wrap" />
                                    <TextBlock Text="Keep your application up to date"
                                               FontSize="12"
                                               Foreground="{DynamicResource SecondaryTextBrush}"
                                               Margin="0,4,0,0"
                                               TextWrapping="Wrap" />
                                </StackPanel>
                            </Grid>

                            <!-- Update Status -->
                            <Border Background="{DynamicResource AccentLightBrush}"
                                    BorderThickness="1"
                                    BorderBrush="{DynamicResource AccentBrush}"
                                    CornerRadius="6"
                                    Padding="12"
                                    Margin="0,0,0,16"
                                    Visibility="{Binding LastCheckedDate, Converter={StaticResource StringNotEmptyToVisibilityConverter}}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Status Icon -->
                                    <Border Grid.Column="0"
                                            Width="24"
                                            Height="24"
                                            Background="{DynamicResource AccentBrush}"
                                            CornerRadius="12"
                                            Margin="0,0,12,0"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="✓"
                                                   FontSize="14"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center" />
                                    </Border>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding UpdateStatusMessage}"
                                                   FontSize="13"
                                                   FontWeight="Medium"
                                                   Foreground="{DynamicResource PrimaryTextBrush}"
                                                   TextWrapping="Wrap" />
                                        <TextBlock Text="{Binding LastCheckedDate, StringFormat=Last checked: {0}}"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                                   Margin="0,2,0,0"
                                                   TextWrapping="Wrap" />
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Check for Updates Button -->
                            <Button Command="{Binding CheckForUpdatesNowCommand}"
                                    IsEnabled="{Binding IsCheckingForUpdates, Converter={StaticResource BooleanNegationConverter}}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,0,0,8">
                                <Button.Visibility>
                                    <Binding Path="AvailableUpdate">
                                        <Binding.Converter>
                                            <converters:NullToVisibilityConverter Invert="False" />
                                        </Binding.Converter>
                                    </Binding>
                                </Button.Visibility>
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="Check for Updates"
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>

                            <!-- Download & Install Button -->
                            <Button Command="{Binding InstallUpdateCommand}"
                                    IsEnabled="{Binding IsDownloadingUpdate, Converter={StaticResource BooleanNegationConverter}}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,0,0,8">
                                <Button.Visibility>
                                    <Binding Path="AvailableUpdate">
                                        <Binding.Converter>
                                            <converters:NullToVisibilityConverter Invert="True" />
                                        </Binding.Converter>
                                    </Binding>
                                </Button.Visibility>
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding CheckForUpdatesButtonText}"
                                                   VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Action Buttons -->
                <Border BorderThickness="0,1,0,0"
                        BorderBrush="{DynamicResource BorderBrush}"
                        Padding="0,24,0,0"
                        Margin="0,24,0,0">
                    <WrapPanel Orientation="Horizontal">
                        <Button Content="Reset to Defaults"
                                Command="{Binding ResetToDefaultsCommand}"
                                Background="{DynamicResource ErrorBrush}"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="16,10"
                                Cursor="Hand"
                                Margin="0,0,8,8">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="6"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                      VerticalAlignment="Center" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Opacity" Value="0.9" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Content="Export Settings"
                                Command="{Binding ExportSettingsCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Margin="0,0,0,8" />
                    </WrapPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>